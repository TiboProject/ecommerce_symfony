{% extends 'base.html.twig' %}

{% block title %}Profile Edition{% endblock %}

{% block body %}
    <section style="margin-bottom: 0px;">
        <div class="container-fluid">
            <h3 class="text-dark mb-4">Profil</h3>
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Param√®tres utilisateur</p>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row" style="margin-bottom: 25px;text-align: left;">
                            <div class="col-sm-4 col-md-4 col-lg-3 col-xl-2 col-xxl-2" style="display: inline;text-align: center;margin-bottom: 25px;"><img class="rounded-circle mb-3 mt-4 img-fluid" src="assets/img/dogs/image2.jpeg" style="display: inline;max-height: 110px;"><br><button class="btn btn-primary btn-sm" id="photoBtn" type="button">Change Photo</button></div>
                            <div class="col-sm-8 col-md-8 col-lg-9 col-xl-10 col-xxl-10 align-self-center">
                                <div class="row">
                                    <div class="col-md-12 text-start">
                                        <div class="mb-3" style="padding-bottom: 0px;margin-bottom: -9px;"><label class="form-label" for="email"><strong>Adresse mail</strong></label>
                                            <p>thibaut.coquelet@gmail.com</p>
                                        </div>
                                    </div>
                                    {{ form_start(registrationForm) }}
                                    {{ form_row(registrationForm._token) }}
                                        <div class="form-group">{{ form_row(registrationForm.username, {'label':'Pseudo', 'attr':{'class':'form-control form-control', 'type':'text'}}) }}</div>
                                        <div class="form-group mb-5">
                                        {{ form_row(registrationForm.plainPassword, {'label':'Mot de passe', 'attr':{'class':'form-control form-control', 'type':'password'}}) }}
                                                                    <div class="col-md-12" style="text-align: right;margin-top: 5px;"><button class="btn btn-primary btn-sm" id="submitBtn" type="submit">Sauvegarder</button></div>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                            <div class="col">
                                <p id="usernameErrorMsg" class="text-danger" style="display: none;"></p>
                                <p id="passwordErrorMsg" class="text-danger" style="display: none;"></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
